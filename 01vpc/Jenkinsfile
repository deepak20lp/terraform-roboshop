pipeline {
    agent {node {label "AGENT-1"}}

    stages {
        stage('init') {
            steps {
                sh '''
                    pwd
                    cd 01vpc
                    terraform init
                '''
            }
        }
        stage('plan') {
            steps {
                sh '''
                pwd
                cd 01vpc
                pwd
                ls -ltr
                terraform plan
                ''' 
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}